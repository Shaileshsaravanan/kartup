doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Kartup - Lobby
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=M+PLUS+Rounded+1c:wght@500&display=swap")
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'M PLUS Rounded 1c', sans-serif;
        background-color: #cdeaff;
        background-image: linear-gradient(45deg, rgba(255,255,255,0.05) 25%, transparent 25%, transparent 50%, rgba(255,255,255,0.05) 50%, rgba(255,255,255,0.05) 75%, transparent 75%, transparent);
        background-size: 40px 40px;
        color: #222;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .lobby-container {
        background: #fffdf9;
        border: 3px solid #dedede;
        border-radius: 16px;
        padding: 40px 30px;
        text-align: center;
        box-shadow: 0 6px 0 #bcbcbc;
        max-width: 480px;
        width: 90%;
      }

      h1 {
        font-family: 'Press Start 2P', cursive;
        font-size: 1.4rem;
        color: #e60012;
        margin-bottom: 20px;
      }

      .subtitle {
        font-size: 1rem;
        margin-bottom: 30px;
        color: #555;
      }

      .button-group {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-bottom: 30px;
      }

      .btn {
        padding: 14px 24px;
        border: none;
        border-radius: 10px;
        font-size: 0.95rem;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        transition: all 0.2s ease;
        display: inline-block;
      }

      .btn-primary {
        background-color: #e60012;
        color: white;
        box-shadow: 0 4px 0 #a1000b;
      }

      .btn-secondary {
        background-color: #0099da;
        color: white;
        box-shadow: 0 4px 0 #006a9a;
      }

      .btn:hover {
        transform: translateY(-2px);
      }

      .join-section {
        border-top: 2px dashed #ddd;
        padding-top: 30px;
      }

      .input-group {
        display: flex;
        gap: 10px;
        margin-top: 15px;
        flex-direction: row;
        justify-content: center;
      }

      input {
        flex: 1;
        padding: 10px 16px;
        border: 2px solid #ccc;
        border-radius: 8px;
        background: #fff;
        color: #222;
        font-size: 1rem;
        text-align: center;
        text-transform: uppercase;
      }

      input::placeholder {
        color: #aaa;
      }

      input:focus {
        outline: none;
        border-color: #e60012;
      }

      .error {
        color: #e60012;
        margin-top: 15px;
        font-size: 0.85rem;
        font-weight: 500;
      }

  body
    .lobby-container
      h1 ðŸŸ¥ KARTUP
      p.subtitle Nintendo-style multiplayer racing

      .button-group
        a.btn.btn-primary(href="/create") Create New Room

      .join-section
        h3(style="font-size: 1rem; margin-bottom: 10px") Join a Room
        .input-group
          input#roomCode(type="text", placeholder="ROOM CODE", maxlength="6")
          button.btn.btn-secondary#joinBtn Join
        .error#errorMsg

    script.
      document.getElementById('joinBtn').addEventListener('click', function() {
          const roomCode = document.getElementById('roomCode').value.trim().toUpperCase();
          const errorMsg = document.getElementById('errorMsg');
          
          if (!roomCode) {
              errorMsg.textContent = 'Please enter a room code';
              return;
          }

          if (roomCode.length !== 6) {
              errorMsg.textContent = 'Room code must be 6 characters';
              return;
          }

          window.location.href = `/join/${roomCode}`;
      });

      document.getElementById('roomCode').addEventListener('keypress', function(e) {
          if (e.key === 'Enter') {
              document.getElementById('joinBtn').click();
          }
      });

      document.getElementById('roomCode').addEventListener('input', function(e) {
          e.target.value = e.target.value.toUpperCase();
          document.getElementById('errorMsg').textContent = '';
      });