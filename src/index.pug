<!DOCTYPE html>
html(lang="en")
head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Kartup - Room #{roomCode}
    link(rel="stylesheet", href="/css/style.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=M+PLUS+Rounded+1c:wght@500&display=swap")
    style.
      body {
        font-family: 'M PLUS Rounded 1c', sans-serif;
        background-color: #cdeaff;
        background-image: linear-gradient(45deg, rgba(255,255,255,0.05) 25%, transparent 25%, transparent 50%, rgba(255,255,255,0.05) 50%, rgba(255,255,255,0.05) 75%, transparent 75%, transparent);
        background-size: 40px 40px;
        color: #222;
      }
      .room-info {
        background: #fffdf9;
        border: 3px solid #dedede;
        padding: 20px;
        border-radius: 12px;
        margin: 1em auto;
        text-align: center;
        box-shadow: 0 6px 0 #bcbcbc;
      }
      .room-code {
        font-family: 'Press Start 2P', cursive;
        font-size: 1rem;
        color: #e60012;
      }
      .share-info {
        margin-top: 0.5em;
        font-size: 0.75rem;
        color: #0099da;
      }
      .back-btn a {
        font-size: 0.8rem;
        text-decoration: none;
        color: white;
        background: #e60012;
        padding: 8px 16px;
        border-radius: 10px;
        display: inline-block;
        margin-top: 10px;
      }
      #score {
        font-family: 'Press Start 2P', cursive;
        text-align: center;
        font-size: 1.25rem;
        color: #222;
      }
      button#start_btn {
        font-family: 'Press Start 2P', cursive;
        background-color: #e60012;
        color: white;
        border: none;
        border-radius: 10px;
        padding: 12px 24px;
        margin: 2em auto;
        display: block;
        cursor: pointer;
        box-shadow: 0 4px 0 #aa0000;
      }
      span#timmer {
        display: block;
        text-align: center;
        font-family: 'Press Start 2P', cursive;
        font-size: 2rem;
        color: #0065d9;
      }

body
    .room-info
        .room-code Room Code: #{roomCode}
        if isHost
            .share-info Share this code with your friend!
        .back-btn
            a(href="/") ‚Üê Back to Lobby
    
    #game
        #score
            span#player1_score 0 
            | :
            span#player2_score  0
        #control-board.circle(data-content="red")
            #controller.circle

    .car#car1
        img#car1_img(src="/imgs/car1.png", alt="")
    .car#car2
        img#car2_img(src="/imgs/car2.png", alt="")

    button#start_btn Ready
    span#timmer 3

    #tyres

    script(src="https://cdn.socket.io/4.6.0/socket.io.min.js" integrity="sha384-c79GN5VsunZvi+Q/WObgk2in0CbZsHnjEqvFxC5DxHn9lTfNce2WW6h2pH6u/kF+" crossorigin="anonymous")
    script.
        let main_car = car#{player};
        let roomCode = "#{roomCode}";
        let isHost = #{isHost};
    script(src="/js/game.js")